animate()
    -webkit-transition arguments
    -moz-transition arguments
    -o-transition arguments
    transition arguments

.sprint-menu
    margin 15px 0 0 0

.sprint-main
    margin 0 0 0 20px

.sprint-summary
    margin 15px 0 0 0
    width 80%
    height 200px

#sprint-name
    font-size inherit
    font-family inherit
    font-weight inherit
    height inherit
    width 300px
    color #333
    margin -8px 0 -7px 0

.sprint-sidebar
    dl
        display block
    dt
        display inline-block
    dd
        display inline

.story textarea
    resize none

.story-points, .task-points
    width: 20px

.story-commit
    display inline

.story-body
    //animate all 2.5s ease-in-out
    overflow hidden
    //max-height 170px

.collapsed
    //max-height 0
    display none

ul.tasks
    margin-left 45px
